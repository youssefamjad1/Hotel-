  <!-- Custom CSS -->
  <style>
    /* Add custom CSS styles here */
    .form-container {
      max-width: 400px;
      margin: auto;
      margin-top: 50px;
    }
    .form-container form {
      padding: 20px;
      background-color: #f2f2f2;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
    .form-container h2 {
      text-align: center;
    }
  </style>
